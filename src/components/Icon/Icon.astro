---
type Props = {
  class?: string;
};

const { class: className, ...rest } = Astro.props;
---

<span class={`icon ${className}`} {...rest}><slot /></span>

<style is:global>
  .icon {
    font-family: 'Material Symbols Rounded Variable';
    font-weight: normal;
    font-style: normal;
    font-size: 24px;
    display: inline-block;
    line-height: 1;
    text-transform: none;
    letter-spacing: normal;
    word-wrap: normal;
    white-space: nowrap;
    direction: ltr;
  }
</style>
