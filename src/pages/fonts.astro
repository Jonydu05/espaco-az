  }

  .konkhmer-sleokchhner {
    font-family: 'Konkhmer Sleokchhner', system-ui;
  }

  .kavoon {
    font-family: 'Kavoon', system-ui;
  }

  .chicle {
    font-family: 'Chicle', system-ui;
  }

  .changa-one {
    font-family: 'Changa One', system-ui;
  }

  .bagel-fat-one {
    font-family: 'Bagel Fat One', system-ui;
  }
</style>

<script>
  const btns: NodeListOf<HTMLButtonElement> = document.querySelectorAll('.btn-fonts');
  const h1 = document.getElementById('title-font');

  btns.forEach(btn => {
