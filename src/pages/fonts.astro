</Layout>

<style lang="scss">
  h1 {
    text-align: center;
  }

  main {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    padding-top: 5rem;
    gap: 5rem;
  }

  .nunito {
    font-family: 'Nunito Sans Variable', system-ui;
  }

  .calistoga {
    font-family: 'Calistoga', system-ui;
  }

  .caprasimo {
    font-family: 'Caprasimo', system-ui;
  }

  .staatliches {
    font-family: 'Staatliches', system-ui;
  }

  .poetsen-one {
